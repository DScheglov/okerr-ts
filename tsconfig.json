{
  "exclude": ["lib/**/*", "node_modules", "dist/**/*", "coverage/**/*"],
  "compilerOptions": {
    "rootDir": "./",

    "target": "ESNext", 
    "lib": ["ESNext", "DOM"], 

    "module": "CommonJS", 
    "moduleResolution": "node",

    "declaration": true,
    "sourceMap": true,
    "noEmit": true,

    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true, 
    "strictFunctionTypes": true,
    "strictBindCallApply": true,

    "skipLibCheck": true,
    "types": ["node"],
  }
}
